{
  "name": "@autofica/abi",
  "version": "1.0.0",
  "description": "ABI definitions for all smartcontracts used in the repo",
  "main": "build/index.js",
  "repository": "https://www.github.com/autofica/core",
  "author": "carlosballadares",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build:gen": "yarn generate-types && yarn build",
    "build": "rimraf build && tsc && ts-node ./scripts/post-build.ts",
    "postinstall": "yarn generate-types",
    "test": "cross-env NODE_ENV=test jest ./test",
    "generate-types": "rimraf src/abi/gen && ts-node ./scripts/generate-abi.ts && typechain --outDir src/gen-types --target=ethers-v5 'src/abi/**/*.json'"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/jest": "^26.0.20",
    "cross-env": "^7.0.3",
    "ethers": "^5.1.4",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "4.1.5"
  }
}
